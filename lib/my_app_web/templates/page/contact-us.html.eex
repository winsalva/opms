      <div class="contacts">
        <p>
	  <i class="fa fa-phone"></i>
	  (+63) 9091234567</p>
	<p>
	  <i class="fa fa-envelope-square"></i>
	  example@gmail.com</p>
	<p>
	  <i class="fa fa-map-marker"></i>
