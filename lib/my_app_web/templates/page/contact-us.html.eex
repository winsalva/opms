          <span><i class="fa fa-map-marker"></i>&nbsp;&nbsp;&nbsp;1234 street, Sample location, Sample City, Philippines</span>
	</div>
      </div>
    </div>

    <!-- footer -->
    <%= render(MyAppWeb.SharedView, "footer.html", conn: @conn) %>
    
  </div>
</div>
